---
interface Props {
  title: string;
  description?: string;
  href: string;
  relMe?: boolean;
}

const { title, description, href, relMe = true } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel={`noopener noreferrer${relMe ? " me" : ""}`}
  class="glass-card group relative flex w-full items-center gap-4 rounded-[20px] px-4 py-4 overflow-hidden"
>
  <div
    class="card-gradient-top-light dark:card-gradient-top absolute inset-x-0 top-0 h-[50%] pointer-events-none"
  >
  </div>

  <div
    class="card-gradient-bottom-light dark:card-gradient-bottom absolute inset-x-0 bottom-0 h-[30%] pointer-events-none"
  >
  </div>

  <div
    class="card-gradient-hover-light dark:card-gradient-hover absolute inset-0 pointer-events-none rounded-[20px] opacity-0 group-hover:opacity-100 transition-opacity duration-300"
  >
  </div>

  <div
    class="glass-icon relative flex h-11 w-11 shrink-0 items-center justify-center rounded-xl text-gray-700"
  >
    <slot name="icon" />
  </div>

  <div class="relative flex-1 min-w-0">
    <h3 class="text-[15px] font-semibold text-gray-800 tracking-tight">
      {title}
    </h3>
    {
      description && (
        <p class="text-[12px] text-gray-500 truncate mt-0.5">{description}</p>
      )
    }
  </div>

  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="lucide lucide-chevron-right relative h-5 w-5 text-gray-400 transition-all duration-200 group-hover:translate-x-0.5 group-hover:text-gray-600"
  >
    <path d="m9 18 6-6-6-6"></path>
  </svg>
</a>
