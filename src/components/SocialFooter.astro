---
import { siteConfig } from "../config";
---
<div class="flex flex-col items-center gap-4">
  <div class="glass-pill flex items-center gap-2 px-4 py-2 rounded-full">
    {
      siteConfig.socialLinks.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer me"
          aria-label={link.platform}
          class="flex h-10 w-10 items-center justify-center rounded-full text-gray-500 transition-colors hover:text-gray-700 hover:scale-115 active:scale-90 transition-transform duration-200"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            set:html={link.iconPath}
          />
        </a>
      ))
    }
  </div>

  <p class="text-[11px] text-gray-400">Made with Astro</p>
</div>
